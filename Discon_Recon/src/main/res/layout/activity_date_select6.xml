<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical"
    tools:context=".activities.Select_FDR_Details_Activity">
    <include layout="@layout/toolbar"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_below="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lin_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/txt_accountid"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginLeft="3dp"
                    android:textSize="15sp"
                    android:text="Account Id"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edit_acc_id"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"
                    android:padding="9dp"
                    android:singleLine="true"
                    android:background="@drawable/rectangle_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/lin_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/txt_subdivision"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:text="Subdivision"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edit_subdivision"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginLeft="5dp"
                    android:padding="9dp"
                    android:singleLine="true"
                    android:background="@drawable/rectangle_edittext"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/buttonpressed"
                android:text="Search"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAllCaps="false"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>