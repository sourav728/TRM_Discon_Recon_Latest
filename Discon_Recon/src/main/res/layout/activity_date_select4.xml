<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tvd.trm_discon_recon.fragments.Discon_List">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:id="@+id/lin_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_style2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_dis_te"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECONNECTION REPORT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="From Date"/>
            <TextView
                android:id="@+id/txt_from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/border_style"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/img_fromdate"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/calender"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="To Date"/>
            <TextView
                android:id="@+id/txt_to_dtae"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/border_style"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/img_todate"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/calender"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_Report"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:background="@drawable/mybuton"
            android:text="Submit"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
