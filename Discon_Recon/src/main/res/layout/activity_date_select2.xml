<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:id="@+id/lin_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_style2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_dis_te"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECONNECT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Date"/>
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/border_style"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/img_fromdate"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/calender"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_Reconnect"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:background="@drawable/mybuton"
            android:text="Submit"
            android:textStyle="bold" />
    </LinearLayout>
    <!--<TextView
        android:id="@+id/tv_check_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="155dp"
        android:gravity="center" />-->
</RelativeLayout>
